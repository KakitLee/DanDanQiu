<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unimelb.bouncyball"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- this activity is we start the game -->
        <activity
            android:name="com.unimelb.bouncyball.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <!-- main activity we play games here -->
        <activity
            android:name="com.unimelb.bouncyball.MainActivity" >
        </activity>
        <!--we set the game's setting here -->
        <activity 
            android:name="com.unimelb.bouncyball.SettingActivity">
        </activity>
                <activity 
            android:name="com.unimelb.bouncyball.downLoadLevel">
        </activity>
        <service  
            android:name=".BGM"  
            android:exported="true"  
            android:process=":remote">      
        </service>  
        
    </application>

</manifest>